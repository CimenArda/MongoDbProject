@using MongoDbProject.Dtos.ProductDtos
@model List<ResultProductWithCategoryDto>
@{
    ViewData["Title"] = "GetProductByCategoryId";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="product-wrap">
	<div class="product-list">
		<ul class="row">
			@foreach (var item in Model)
			{
				
		
			<li class="col-lg-4 col-md-6 col-sm-12">
				<div class="product-box">
					<div class="producct-img"><img src="@item.ProductImageUrl" style="width:428px;height:300px;" alt=""></div>
					<div class="product-caption">
						<h4><a href="#">@item.ProductName</a></h4>
						<div class="price">
							<del></del><ins>@item.ProductPrice TL</ins>
						</div>
						<a href="#" class="btn btn-outline-primary">@item.Category.CategoryName</a>
					</div>
				</div>
			</li>
			}
		</ul>
	</div>
	
</div>
