@using MongoDbProject.Dtos.CategoryDtos
@model GetByIdCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<div class="pd-20 card-box mb-30">
	<div class="clearfix">
		<div class="pull-left">
			<h4 class="text-blue h4">Kategori Güncelleme Sayfası</h4>
			<p class="mb-30"></p>
		</div>

	</div>
	<form method="post">
		<input type="hidden" asp-for="CategoryID" />
		<div class="form-group row">
			<label class="col-sm-12 col-md-2 col-form-label">Kategori Adı</label>
			<div class="col-sm-12 col-md-10">
				<input class="form-control" asp-for="CategoryName" type="text" placeholder="">
			</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-12 col-md-2 col-form-label">Resim Yolu</label>
			<div class="col-sm-12 col-md-10">
				<input class="form-control" type="text" asp-for="ImageUrl" placeholder="">
			</div>
		</div>
		<button type="submit" class="btn btn-outline-success">Güncelle</button>
	</form>

</div>
