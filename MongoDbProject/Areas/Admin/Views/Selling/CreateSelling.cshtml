@using MongoDbProject.Dtos.SellingDtos
@model CreateSellingDto
@{
    ViewData["Title"] = "CreateSelling";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="pd-20 card-box mb-30">
	<div class="clearfix">
		<div class="pull-left">
			<h4 class="text-blue h4">Ürün Ekleme Sayfası</h4>
			<p class="mb-30"></p>
		</div>
	</div>
	<form method="post">
		<div class="form-group row">
			<label class="col-sm-12 col-md-2 col-form-label">Ürün</label>
			<div class="col-sm-12 col-md-10">
				@Html.DropDownListFor(x => x.ProductID, (List<SelectListItem>)ViewBag.productvalues, new { @class = "form-control" })
			</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-12 col-md-2 col-form-label">Resim Yolu</label>
			<div class="col-sm-12 col-md-10">
				<input class="form-control" type="text" asp-for="ProductImageUrl" placeholder="">
			</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-12 col-md-2 col-form-label">Ürün Sayısı</label>
			<div class="col-sm-12 col-md-10">
				<input id="Count" class="form-control" type="number" asp-for="Count" placeholder="" min="0">
			</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-12 col-md-2 col-form-label">Ürün Fiyatı</label>
			<div class="col-sm-12 col-md-10">
				<input id="Price" class="form-control" type="number" asp-for="Price" placeholder="" min="0" step="0.01">
			</div>
		</div>
		
		
		<button type="submit" class="btn btn-outline-success">Ekle</button>
	</form>
</div>


