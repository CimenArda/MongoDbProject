@using MongoDbProject.Dtos.ProductDtos
@model List<ResultProductWithCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="pd-20 card-box mb-30">
    <div class="clearfix mb-20">
        <div class="pull-left">
            <h4 class="text-blue h4">Ürün Tablosu</h4>
            <p>Ürünlerinizle Alakalı İşlemlerinizi buradan yapabilirsiniz.</p>
        </div>

    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Resimi</th>
                <th scope="col">Ürün Adı</th>
                <th scope="col">Ürün Fiyatı</th>
                <th scope="col">Kategori Adı</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;

                <tr>
                    <td>@count</td>
                    <td><img src="@item.ProductImageUrl" style="width:70px;height:70px;" /></td>
                    <td>@item.ProductName</td>
                    <td>@item.ProductPrice TL</td>
                    <td>@item.Category.CategoryName</td>
                    <td><a href="/Admin/Product/DeleteProduct/@item.ProductID" class="btn btn-outline-danger">Sil</a></td>
                    <td><a href="/Admin/Product/UpdateProduct/@item.ProductID" class="btn btn-outline-success">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Admin/Product/CreateProduct/" class="btn btn-outline-info">Ekleme</a>
</div>


